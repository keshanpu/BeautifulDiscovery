<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_about_us_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#000000"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/hot_tool_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="#000000"
                android:src="@drawable/ic_circle_back_normal" />

            <TextView
                android:id="@+id/home_fragment_three_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="关于我们"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/activity_about_us_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_about_us_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_about_us" />

    <ImageView
        android:id="@+id/activity_about_us_iv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_about_us_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/about_us_tips" />

    <ImageView
        android:id="@+id/activity_about_us_iv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_about_us_iv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/slogn_about_us" />

    <LinearLayout
        android:id="@+id/activity_about_us_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_about_us_iv3"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"

        android:weightSum="3">

        <ImageView
            android:id="@+id/activity_about_us_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#ffffff"
            android:onClick="click"
            android:src="@drawable/weibo_icon_red" />

        <ImageView
            android:id="@+id/activity_about_us_weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:onClick="click"
            android:src="@drawable/weixin_icon_green" />

        <ImageView
            android:id="@+id/activity_about_us_zuimei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:background="#ffffff"
            android:onClick="click"
            android:src="@drawable/zuimei_icon_yellow" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/activity_about_us_line"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#D5D5D5" />

    <LinearLayout
        android:id="@+id/activity_about_us_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_about_us_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/activity_about_us_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:onClick="click"
            android:text="官方微博"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/activity_about_us_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:onClick="click"
            android:text="微信公众号"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/activity_about_us_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:onClick="click"
            android:text="最美官网"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_about_us_line2"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="我们有一个梦想，将全球顶尖的设计带给您。在这里您能找到全世界优秀设计师的作品，发现以前从未见过的、不从众的尖货品牌。纽约、巴黎、米兰、伦敦、东京、蒙特利尔... 我们拜访每一位设计师，将他们最好的作品呈现给您，一切，只为您的与众不同。" />
</RelativeLayout>