<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp"
    android:gravity="center"
    >
<TextView
    android:id="@+id/pop_window_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="快捷登录"
    android:textSize="@dimen/fragment_designer_main_size"
    android:layout_marginTop="50dp"
    android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/pop_window_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/pop_window_tv"
        android:layout_marginTop="50dp"
        android:weightSum="3">
        <ImageButton
            android:id="@+id/pop_window_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_sina_normal"
            android:background="#ffffff"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/pop_window_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_sina_normal"
            android:background="#ffffff"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/pop_window_wenxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_sina_normal"
            android:background="#ffffff"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/pop_window_line"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="新浪微博"
            android:textSize="15dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textSize="15dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textSize="15dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pop_window_line"
        android:layout_marginTop="150dp"
        android:text="用户协议"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>