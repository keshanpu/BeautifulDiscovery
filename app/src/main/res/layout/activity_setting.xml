<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#000000">

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/hot_tool_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_circle_back_normal"
                android:background="#000000"/>

            <TextView
                android:id="@+id/home_fragment_three_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="设置"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <TextView
                android:id="@+id/fragment_mine_main_collectio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="20dp"
                android:text="个人信息" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/fragment_mine_main_iv"
                android:padding="5dp"
                android:src="@drawable/ic_mine_portrait" />

            <ImageView
                android:id="@id/fragment_mine_main_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20dp"
                android:src="@drawable/ic_common_arrow_pressed" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_mine_main_rl1"
            android:background="#ffffff">

            <TextView
                android:id="@+id/fragment_mine_main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D5D5D5" />

            <TextView
                android:id="@+id/fragment_mine_main_attentio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_mine_main_line"
                android:padding="20dp"
                android:text="清除缓存" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fragment_mine_main_iv2"
                android:text="0KB"
                android:layout_marginRight="6dp"/>

            <ImageView
                android:id="@id/fragment_mine_main_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_common_arrow_pressed" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_mine_main_rl2"
            android:background="#ffffff"
            android:onClick="click1">

            <TextView
                android:id="@+id/fragment_mine_main_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D5D5D5" />

            <TextView
                android:id="@+id/fragment_mine_main_wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_mine_main_line2"
                android:padding="20dp"
                android:text="反馈" />

            <ImageView
                android:id="@+id/fragment_mine_main_iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                android:src="@drawable/ic_common_arrow_pressed" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_mine_main_rl3"
            android:background="#ffffff">

            <TextView
                android:id="@+id/fragment_mine_main_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D5D5D5" />

            <TextView
                android:id="@+id/fragment_mine_main_zuimei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_mine_main_line3"
                android:padding="20dp"
                android:text="好评" />

            <ImageView
                android:id="@+id/fragment_mine_main_iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                android:src="@drawable/ic_common_arrow_pressed" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_mine_main_rl4"
            android:background="#ffffff">

            <TextView
                android:id="@+id/fragment_mine_main_line4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D5D5D5" />

            <TextView
                android:id="@+id/fragment_mine_main_recommended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_mine_main_line4"
                android:padding="20dp"
                android:text="推荐给朋友" />

            <ImageView
                android:id="@+id/fragment_mine_main_iv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                android:src="@drawable/ic_common_arrow_pressed" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_mine_main_rl5"
            android:background="#ffffff"
            android:onClick="click">

            <TextView
                android:id="@+id/fragment_mine_main_line5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D5D5D5" />

            <TextView
                android:id="@+id/fragment_mine_main_about_us"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fragment_mine_main_line5"
                android:padding="20dp"
                android:text="关于我们" />

            <ImageView
                android:id="@+id/fragment_mine_main_iv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="20dp"
                android:src="@drawable/ic_common_arrow_pressed" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>