<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.beautifulthing.MainActivity">

    <FrameLayout
        android:id="@+id/main_fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000000"/>

    <RadioGroup
        android:id="@+id/main_bottom_radio_group"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/main_bottom_magazine_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/main_magazine_selector"
            android:text="@string/magazine"
            android:textColor="@color/main_radiobutton_textcolor"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/main_bottom_discover_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/main_discover_selector"
            android:text="@string/discover"
            android:textColor="@color/main_radiobutton_textcolor"
            android:textSize="16sp"/>
        <RadioButton
            android:id="@+id/main_bottom_designer_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/main_designer_selector"
            android:text="@string/designer"
            android:textColor="@color/main_radiobutton_textcolor"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/main_bottom_mine_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/main_mine_selector"
            android:text="@string/mine"
            android:textColor="@color/main_radiobutton_textcolor"
            android:textSize="16sp"/>
    </RadioGroup>

</LinearLayout>
