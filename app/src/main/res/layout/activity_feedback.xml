<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    app:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageButton
            android:id="@+id/hot_tool_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_common_back_arrow"
            />
        <TextView
            android:id="@+id/home_fragment_three_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="用户反馈"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/feedback_activity_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/fragment_mine_main_collectio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改联系方式"
        android:padding="20dp"/>
    <ImageView
        android:id="@+id/fragment_mine_main_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/ic_common_arrow_pressed"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/fragment_mine_main_line"
        android:layout_below="@id/fragment_mine_main_collectio"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
        </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:hint="写下您的建议和反馈"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="10dp"/>

    </RelativeLayout>
</LinearLayout>