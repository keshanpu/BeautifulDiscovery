<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_mine_main_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_mine">

        <Button
            android:id="@+id/fragment_mine_feedback_btn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="反馈"
            android:background="@drawable/black_button_bg"
            android:textColor="#ffffff" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_mine_set_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="16dp"
            android:src="@drawable/me_setting" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fragment_mine_login_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_mine_portrait"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/fragment_mine_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_mine_login_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="登录"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_mine_main_rl"
        android:background="#ffffff"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl1"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#FFFFFF">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mine_collection_normal"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/fragment_mine_main_collectio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv1"
                android:text="收藏的画报" />

            <ImageView
                android:id="@+id/fragment_mine_main_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_common_arrow_pressed" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl2"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@id/fragment_mine_main_rl1"
            android:background="#ffffff">

            <TextView
                android:id="@+id/fragment_mine_main_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D5D5D5" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mine_attention_normal"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/fragment_mine_main_attentio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="关注的设计师"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv2"/>

            <ImageView
                android:id="@+id/fragment_mine_main_iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_common_arrow_pressed" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl3"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@id/fragment_mine_main_rl2"
            android:background="#ffffff">

            <TextView
                android:id="@+id/fragment_mine_main_line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D5D5D5" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mine_wish_list_normal"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/fragment_mine_main_wish_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="我的心愿单"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv3"/>

            <ImageView
                android:id="@+id/fragment_mine_main_iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_common_arrow_pressed" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_mine_main_rl4"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_below="@id/fragment_mine_main_rl3"
            android:background="#ffffff">

            <TextView
                android:id="@+id/fragment_mine_main_line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D5D5D5" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mine_wish_list_normal"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/fragment_mine_main_zuimei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="最美产品的另一个产品：最美应用"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/iv4"/>

            <ImageView
                android:id="@+id/fragment_mine_main_iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_common_arrow_pressed" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>