<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/fragment_mine_main_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_mine">
    <Button
        android:id="@+id/fragment_mine_main_btn"
        android:background="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="反馈"
        android:textColor="#ffffff"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_mine_main_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/me_setting"
        android:layout_alignParentRight="true"
        android:padding="10dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_mine_main_civ"
        android:layout_width="100dp"
        android:layout_height="100dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:civ_border_width="2dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_mine_portrait"/>
    <TextView
        android:id="@+id/fragment_mine_main_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="#ffffff"
        android:layout_below="@id/fragment_mine_main_civ"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_below="@id/fragment_mine_main_rl">
   <RelativeLayout
       android:id="@+id/fragment_mine_main_rl1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#ffffff">
       <TextView
           android:id="@+id/fragment_mine_main_collectio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="收藏的画报"
           android:drawableLeft="@drawable/ic_mine_collection_normal"
           android:padding="20dp"/>
        <ImageView
            android:id="@+id/fragment_mine_main_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/ic_common_arrow_pressed"
            android:layout_alignParentRight="true"/>
       </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_mine_main_rl2"
        android:layout_below="@id/fragment_mine_main_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
       <TextView
           android:id="@+id/fragment_mine_main_line"
           android:background="#000000"
           android:layout_width="match_parent"
           android:layout_height="1dp" />
       <TextView
           android:id="@+id/fragment_mine_main_attentio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/fragment_mine_main_line"
           android:text="关注的设计师"
           android:drawableLeft="@drawable/ic_mine_attention_normal"
           android:padding="20dp"/>
       <ImageView
           android:id="@+id/fragment_mine_main_iv2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="20dp"
           android:src="@drawable/ic_common_arrow_pressed"
           android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <RelativeLayout
        android:id="@+id/fragment_mine_main_rl3"
        android:layout_below="@id/fragment_mine_main_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:background="#ffffff">
       <TextView
           android:id="@+id/fragment_mine_main_line2"
           android:background="#000000"
           android:layout_width="match_parent"
           android:layout_height="1dp" />
       <TextView
           android:id="@+id/fragment_mine_main_wish_list"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/fragment_mine_main_line2"
           android:text="我的心愿单"
           android:drawableLeft="@drawable/ic_mine_wish_list_normal"
           android:padding="20dp"/>
       <ImageView
           android:id="@+id/fragment_mine_main_iv3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="20dp"
           android:src="@drawable/ic_common_arrow_pressed"
           android:layout_alignParentRight="true"/>
            </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_mine_main_rl4"
        android:layout_below="@id/fragment_mine_main_rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
       <TextView
           android:id="@+id/fragment_mine_main_line3"
           android:background="#000000"
           android:layout_width="match_parent"
           android:layout_height="1dp" />
       <TextView
           android:id="@+id/fragment_mine_main_zuimei"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/fragment_mine_main_line3"
           android:text="最美产品的另一个产品：最美应用"
           android:drawableLeft="@drawable/ic_mine_zuimei"
           android:padding="20dp"/>
       <ImageView
           android:id="@+id/fragment_mine_main_iv4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:padding="20dp"
           android:src="@drawable/ic_common_arrow_pressed"
           android:layout_alignParentRight="true"/>
    </RelativeLayout>
   </RelativeLayout>
</RelativeLayout>