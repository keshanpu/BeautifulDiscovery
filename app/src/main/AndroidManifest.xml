        </activity>

        <activity android:name=".MainActivity" android:launchMode="singleInstance"/>

        <activity android:name=".CommonActivity.DetailActivity" android:launchMode="singleTask" />
        <activity android:name=".CommonActivity.CommentsActivity" android:launchMode="singleTask"/>

        <activity android:name=".CommonActivity.WebViewActivity"/>
        <activity android:name=".MineFragment.FeedBackdetilActivity"/>
        <activity android:name=".DesignerFragment.DesignerDetilActivity"/>
        <activity android:name=".MineFragment.FeedBackActivity"/>
